{
  "name": "xwp/wp-foo-bar",
  "type": "wordpress-plugin",
  "description": "Plugin Scaffolding for WordPress.",
  "homepage": "https://github.com/xwp/wp-foo-bar",
  "license": "GPL-2.0-or-later",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "7.4.2",
      "ext-filter": "7.1"
    }
  },
  "repositories": [
    {
      "type": "github",
      "name": "xwp/php-scoper-wp-patcher",
      "url": "https://github.com/rumur/php-scoper-wp-patcher",
      "reference": "develop"
    }
  ],
  "require": {
    "php": ">=5.6.20",
    "nesbot/carbon": "^2.46",
    "rumur/wp-notice": "^1.0"
  },
  "require-dev": {
    "automattic/vipwpcs": "@stable",
    "dealerdirect/phpcodesniffer-composer-installer": "@stable",
    "humbug/php-scoper": "^0.14.0",
    "php-coveralls/php-coveralls": "^2.2.0",
    "phpcompatibility/phpcompatibility-wp": "@stable",
    "phpunit/phpcov": "^5.0",
    "phpunit/phpunit": "^7",
    "slowprog/composer-copy-file": "@stable",
    "wp-coding-standards/wpcs": "@stable",
    "xwp/php-scoper-wp-patcher": "dev-develop",
    "xwp/wordpress-tests-installer": "@stable",
    "xwp/wp-dev-lib": "@stable"
  },
  "scripts": {
    "build": [
      "composer install --no-dev --prefer-dist --optimize-autoloader --no-scripts"
    ],
    "format": [
      "phpcbf ."
    ],
    "lint": [
      "@composer validate --strict",
      "phpcs ."
    ],
    "post-install-cmd": [
      "@setup"
    ],
    "post-update-cmd": [
      "@setup"
    ],
    "readme": [
      "vendor/xwp/wp-dev-lib/scripts/generate-markdown-readme"
    ],
    "setup": [
      "SlowProg\\CopyFile\\ScriptHandler::copy",
      "if [ ! -f .git/hooks/pre-commit ]; then vendor/xwp/wp-dev-lib/scripts/install-pre-commit-hook.sh; fi",
      "if [ ! -f .env ]; then cp .env.dist .env; fi"
    ],
    "test": [
      "phpunit"
    ],
    "test-coverage": [
      "phpunit --coverage-html tests/coverage/phpunit"
    ],
    "remove-dependencies-dir": [
      "if [ -e dependencies ]; then rm -rf ./dependencies; fi;"
    ],
    "prefix-dependencies": [
      "@composer install",
      "@remove-dependencies-dir",
      "vendor/bin/php-scoper add-prefix --output-dir=./dependencies --force --quiet",
      "echo '{ \"autoload\": { \"classmap\": [\"\"] } }' > dependencies/composer.json",
      "@composer --working-dir=dependencies dump-autoload --no-dev --classmap-authoritative --no-interaction",
      "echo '{ \"autoload\": { \"classmap\": [\"\"] } }' > ./php/composer.json",
      "@composer --working-dir=php dump-autoload --no-dev --classmap-authoritative --no-interaction"
    ]
  },
  "autoload": {
    "files": [
      "helpers.php"
    ]
  },
  "autoload-dev": {
    "classmap": ["tests/"]
  },
  "extra": {
    "installer-name": "foo-bar",
    "copy-file": {
      "tests/wp-tests-config.php": "vendor/xwp/wordpress-tests/phpunit/wp-tests-config.php"
    }
  }
}
